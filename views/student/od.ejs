<html>

<head>
    <link rel="stylesheet" href="/style.css">
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>


    <% include ../partial/sideNav.ejs %>
        <section id="content">
            <div id="header">
                <div class="nav">
                    <div class="profile">
                        <img style="border-radius: 50%;" src=<%=userProfile%> height="30px" width="30px"><i
                            class="fa fa-caret-down"></i>
                    </div>
                </div>
                </li>
                </ul>
            </div>
            </div>
            <div class="content">
                <div class="content-header">
                    <p class="welcome">Welome <strong>
                            <%=user%>
                        </strong></p>
                </div>
                <div class="container">
                    <form>
                        <Center>
                            <h2 style="font-weight:600;">OD Apply</h2>
                        </Center>
                        <div class="form-outline w-50">
                            <label for="inputPassword4">From Date</label>
                            <input type="date" class="form-control" id="fromdate"><br>
                            <label for="inputAddress">From Time</label>
                            <input type="time" class="form-control" id="fromtime">
                        </div>
                        <div class="form-group">
                            <div class="form-outline w-50">
                                <label for="inputAddress2">To Date</label>
                                <input type="date" class="form-control" id="todate" <br>
                                <label for="inputCity">To Time</label>
                                <input type="time" class="form-control" id="totime">
                                <label for="inputCity">Activity Id</label>
                                <input type="text" class="form-control" id="activityid">
                                <label>Proof*</label>
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" id="file">
                                    <label class="custom-file-label" id="file-label" for="customFile">Upload</label>
                                </div>
                                <label for="exampleFormControlSelect1">Event Type</label>
                                <select class="form-control" id="select">
                                    <option>Technical-Competetion</option>
                                    <option>Paper-Presentation</option>
                                    <option>Project-Competetion</option>
                                    <option>Internship</option>
                                </select>
                            </div>
                        </div>
                        <button class="btn btn-primary" id="submit">Submit</button>
                    </form>
                </div>
                <script src="/od.js"></script>
                <script>
                    let filename
                    const upload = document.getElementById("file")
                    const label = document.getElementById("file-label")
                    upload.onchange = async () => {
                        const file = upload.files[0]
                        label.innerText = file.name
                        filename = Math.random() + file.name
                        const fr = new FileReader();
                        fr.readAsArrayBuffer(file)
                        fr.onload = async (e) => {
                            await fetch("/uploadfile", { method: "POST", headers: { "filename": filename }, body: e.target.result })
                        }
                    }
                </script>
        </section>
</body>

</html>